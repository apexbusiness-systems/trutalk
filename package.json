{
  "name": "trutalk-unicorn",
  "version": "1.0.0",
  "description": "TRU Talk - Voice-First Social Matching Platform | Path to Unicorn Status",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build:dev": "vite build --mode development",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "deploy:supabase": "./scripts/deploy-supabase.sh",
    "deploy:backend": "./scripts/deploy-backend.sh",
    "deploy:staging": "./scripts/deploy-staging.sh",
    "deploy:production": "./scripts/deploy-production.sh",
    "db:migrate": "cd supabase && supabase db push",
    "db:reset": "cd supabase && supabase db reset",
    "typecheck": "turbo run typecheck",
    "test:unit": "jest --config jest.config.js --passWithNoTests",
    "test:integration": "jest --config jest.integration.config.js --passWithNoTests",
    "test:e2e": "detox test",
    "test:load": "k6 run tests/load/scalability-test.js",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "generate:types": "supabase gen types typescript --local > packages/shared/src/database.types.ts"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "turbo": "^1.11.3",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "@google-cloud/speech": "^7.2.1",
    "@google-cloud/text-to-speech": "^6.4.0",
    "@google-cloud/translate": "^9.3.0",
    "@radix-ui/react-toast": "^1.2.15",
    "@supabase/supabase-js": "^2.83.0",
    "@tanstack/react-query": "^5.90.10",
    "@types/react": "^18.3.27",
    "@types/react-dom": "^18.3.7",
    "@vercel/node": "^5.5.8",
    "@vitejs/plugin-react-swc": "^3.11.0",
    "autoprefixer": "^10.4.22",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "deepl-node": "^1.22.0",
    "lovable-tagger": "^1.1.11",
    "lucide-react": "^0.554.0",
    "openai": "^6.9.1",
    "postcss": "^8.5.6",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.30.2",
    "stripe": "^20.0.0",
    "tailwind-merge": "^2.6.0",
    "tailwindcss": "^3.4.18",
    "tailwindcss-animate": "^1.0.7",
    "twilio": "^5.10.6",
    "vite": "^5.4.21",
    "zod": "^4.1.12"
  }
}
