{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "jsx": "react-native",
    "lib": ["ESNext"],
    "target": "ES2020",
    "moduleResolution": "Node",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@shared/*": ["../../packages/shared/*"]
    },
    "allowJs": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "noEmit": true
  },
  "include": ["app/**/*", "components/**/*", "hooks/**/*", "lib/**/*", "App.tsx", "*.ts", "*.tsx"],
  "exclude": ["node_modules"]
}
